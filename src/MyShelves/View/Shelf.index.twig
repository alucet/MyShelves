{% extends "/index.twig" %}
{% block title %}&Eacute;tag&egrave;re{% endblock %}
{% block head %}
    <link href="/css/lists.css" type="text/css" rel="stylesheet" />
    <link href="/css/forms.css" type="text/css" rel="stylesheet" />
{% endblock %}
{% block content %}
    <h2>&Eacute;tag&egrave;re <span>{{ shelf.name|e }}</span></h2>
    {% if msg is not empty %}
        <div class="message">{{ msg|e|nl2br }}</div>
    {% endif %}
    <div id="item-view">
        <div class="edit">
            <button accesskey="e" id="item-view-edit" title="Modifier l'&eacute;tag&egrave;re">Modifier...</button>
        </div>
        <span class="label">Nom:</span><span id="item-view-name">{{ shelf.name|e }}</span>
    </div>
    <div id="item-edit">
        <h3>Modifier l'&eacute;tag&egrave;re:</h3>
        <form method="POST" id="item-edit-form" title="Modifier les informations de cet élément">
            <fieldset>
                <input type="hidden" name="id" id="id" value="{{ shelf.id }}" />
                <input type="hidden" name="controller" id="controller" value="shelf" />
                <input type="hidden" name="list-controller" id="list-controller" value="editors" />
                <label class="mandatory" title="Obligatoire"><span>Nom:</span></label>
                <input type="text" name="name" id="name" value="{{ shelf.name|e }}" title="Nom de l'étagère. Obligatoire." maxlength="20" class="mandatory" />
            </fieldset>
        </form>
        <div class="edit">
            <button accesskey="q" id="item-edit-cancel" title="Quitter ce formulaire">Annuler</button>
            <button accesskey="v" id="item-edit-send" title="Soumettre ce formulaire.">Enregistrer</button>
        </div>
    </div>
    <div id="related-items-list">
        <h3>&Eacute;l&eacute;ments dans cette &eacute;tag&egrave;re:</h3>
        
    </div>
{% endblock content %}
{% block scripts %}
    <script type="text/javascript" src="/js/itemEdit.js"></script>
{% endblock scripts %}